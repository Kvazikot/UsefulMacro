  <set C="(2+2)*3+1" />
  <check C="13" />
  <set D="10e3*6+6+6" />
  <check D="666" />
  <set E="sqrt(9)*4+1" />
  <check E="13" />
  <set F="sqrt(sqrt(8+1)*3)*4+1" />
  <check F="13" />
  <set G="(A+B)/2"/>
  <check G="9" />
